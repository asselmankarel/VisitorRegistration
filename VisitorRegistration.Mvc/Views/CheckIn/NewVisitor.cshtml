@model VisitorViewModel
@{
    ViewData["Title"] = "Visitor";
}
<div class="container w-50 mx-auto">
    <h1>Visitor</h1>
    <form method="post" asp-controller="CheckIn" asp-action="SaveNewVisitor">
        <div class="form-group">
            <label for="Firstname">Firstname</label>
            <input class="form-control w-50" type="text" id="Firstname" name="Firstname"/>
        </div>
        <div class="form-group">
            <label for="Lastname">Lastname</label>
            <input class="form-control w-50" type="text" id="Lastname" name="Lastname"/>
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input class="form-control w-50" type="email" id="Email" name="Email" value="@Model.Email" disabled="disabled"/>
        </div>
        
        <button type="submit" class="btn btn-lg btn-primary">Next</button>
    </form>
</div>

